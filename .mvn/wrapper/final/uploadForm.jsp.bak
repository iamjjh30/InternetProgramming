<%@ page contentType="text/html;charset=euc-kr" %>
<html>
<head>
    <title>이미지 첨부</title>
</head>
<body>
    <center>
        <h2>상품 이미지 업로드</h2>
        
        <form name="uploadForm" 
              action="uploadProcess.jsp" <%-- 처리할 JSP 파일명 --%>
              method="post" 
              enctype="multipart/form-data">
            
            <p>
                <b>상품명:</b> <input type="text" name="title">
            </p>
            <p>
                <b>이미지:</b> 
                <input type="file" name="item_img" accept="image/*">
            </p>
            <p>
                <input type="submit" value="업로드">
            </p>
            
        </form>
    </center>
</body>
</html>