<%@ page contentType="text/html;charset=euc-kr" %>
<%@ page import="java.sql.*" %> 
<html><head><title>상품 등록 결과</title></head>
<body>

<% 
	request.setCharacterEncoding("euc-kr");  // 입력폼에서 전송된 한글데이터 처리

	// 입력폼에서 받는 데이터는 모두 String형임
	int cat_id = Integer.parseInt(request.getParameter("cat_id"));
	String title = request.getParameter("title");
	int price = Integer.parseInt(request.getParameter("price"));
	String item_img = request.getParameter("item_img");
	


try {
 	 String DB_URL="jdbc:mysql://localhost:3306/final";  //  접속할 DB명
     String DB_ID="multi";  //  접속할 아이디
     String DB_PASSWORD="abcd"; // 접속할 패스워드
 	 
	 Class.forName("org.gjt.mm.mysql.Driver");  // JDBC 드라이버 로딩
 	 Connection con = DriverManager.getConnection(DB_URL, DB_ID, DB_PASSWORD);
     // DB에 접속           

	//SQL문 작성 : 테이블 필드명
    String jsql = "INSERT INTO item   (cat_id, title, price, item_img";
)  VALUES  (?, ?, ?, ?)"; 
      
    //PreparedStatement 생성(SQL문의 형틀을 정의함)
	PreparedStatement pstmt = con.prepareStatement(jsql); 

	//위의 SQL문에서 ?에 해당되는 곳에 다음의 값들을 하나씩 할당함 (인수 전달)
	//정수형의 경우에는 setInt()를 사용함
    pstmt.setInt(1, cat_id); 
	pstmt.setString(2, title); 
    pstmt.setInt(3, price);
	pstmt.setString(4, item_img);
	pstmt.executeUpdate(); // SQL문 실행
%>
<center>
<font size='6'><b>상품 정보</b></font><p>
<table border="2" cellpadding="10"  style="font-size:10pt;font-family:맑은 고딕">
		<tr><td width="100">이미지</td><td width="300"><%=item_img%></td></tr>
		<tr><td width="100">상품번호</td><td width="300"><%=cat_id%></td></tr>
		<tr><td width="100">상품명</td><td width="300"><%=title%></td></tr>
		<tr><td width="100">상품가격</td><td width="300"><%=price%> 원</td></tr>
</table><p>
<% 
  } catch(Exception e) { 
		out.println(e);
}
%>
<p>

</center>
</body>
</html>